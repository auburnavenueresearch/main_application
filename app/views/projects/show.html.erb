<% provide(:title, "#{@project.project_title}") %>
<h1><%= @project.project_title %></h1>
<body id="home">
<div class="row">

	<div class="hero-unit center">
		<p>
		<%= image_tag @project.image_url.to_s %>
		<%= image_tag @project.image1_url.to_s %>
		</p>
		<p>
		<%= image_tag @project.image2_url.to_s %>
		<%= image_tag @project.image3_url.to_s %>
		</p>
		<h2>Description: </h2>
		<p><%= @project.description %></p>

	</div>
	<div class="hero-unit">
		<p><strong>Tools:</strong><br><%= @project.tools %></p>
		<p><strong>Materials:</strong><br><%= @project.materials %></p>
		<p><strong>Instructions:</strong><br><%= @project.instructions %></p>
	</div>

	<%= link_to "Edit Project", edit_project_path, class: "btn btn-large btn-primary" %>
</div>
</body>
